# Configurations for the ghostty terminal
theme = Nord
font-family = "JetBrainsMono Nerd Font"
auto-update = off
background-opacity = 0.93
maximize = true
# Forcing the cursor and disabling shell-integration
cursor-style = block
shell-integration-features = no-cursor,no-title
# Removing title bar
window-decoration = auto
gtk-titlebar = false
gtk-titlebar-style = tabs
gtk-single-instance = true

# Quick terminal
keybind = global:super+grave_accent=toggle_quick_terminal
keybind = global:super+x=toggle_quick_terminal
quick-terminal-position = center
quick-terminal-size = 80%,80%

# Making the keybinds for tab switching more similar to other applications
keybind =  ctrl+one=goto_tab:1
keybind =  ctrl+two=goto_tab:2
keybind =  ctrl+three=goto_tab:3
keybind =  ctrl+four=goto_tab:4
keybind =  ctrl+five=goto_tab:5
keybind =  ctrl+six=goto_tab:6
keybind =  ctrl+seven=goto_tab:7
keybind =  ctrl+eight=goto_tab:8
